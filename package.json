{
  "name": "dynamic-map",
  "version": "1.1.0",
  "type": "module",
  "description": "A React/Next.js component library for dynamic mapping components",
  "main": "dist/dynamic-map.umd.js",
  "module": "dist/dynamic-map.es.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/dynamic-map.es.js",
      "require": "./dist/dynamic-map.umd.js"
    },
    "./style.css": "./dist/style.css"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "LIB_BUILD=true tsc && vite build",
    "dev": "vite",
    "demo": "vite --mode development",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "jest",
    "lint": "eslint src --ext .ts,.tsx",
    "prepare": "npm run build"
  },
  "keywords": [
    "react",
    "nextjs",
    "component-library",
    "mapping",
    "dynamic"
  ],
  "author": "Mart Groothuis",
  "license": "MIT",
  "peerDependencies": {
    "maplibre-gl": ">=4.0.0",
    "pmtiles": ">=3.0.0",
    "react": ">=18.0.0 || ^19.0.0",
    "react-dom": ">=18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@storybook/addon-docs": "10.1.5",
    "@storybook/addon-links": "10.1.5",
    "@storybook/react-vite": "10.1.5",
    "@storybook/testing-library": "^0.2.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "@vitejs/plugin-react": "^5.1.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-storybook": "10.1.5",
    "jest": "^30.2.0",
    "maplibre-gl": "^5.14.0",
    "pmtiles": "^4.3.0",
    "postcss": "^8.5.6",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "storybook": "10.1.5",
    "tailwindcss": "^4.1.17",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.49.0",
    "vite": "^7.2.7",
    "vite-plugin-dts": "^4.5.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/martgroothuis/dynamic-map.git"
  },
  "homepage": "https://github.com/martgroothuis/dynamic-map#readme",
  "bugs": {
    "url": "https://github.com/martgroothuis/dynamic-map/issues"
  }
}
